<div align="center">

  <%= simple_form_for :contact, :url => {:action => :create, :controller=>"contacts"} do |f| %>
    <%= f.input :name, :required => true, :placeholder => 'Name', autofocus: true %>
    <%= f.input :email, :required => true, :placeholder => 'Email' %>
    <%= f.check_box :signup, :required => true, :checked => true, :label => "Sign-up to Weekly Emails" %>
    <%= f.label :signup, :label => "Sign-up to Weekly Emails" %></br>
    <%= f.check_box :curate, :required => true, :checked => false, :label => "Be a curator for dailylyric.com." %>
    <%= f.label :curate, :label => "Be a curator for dailylyric.com." %>



    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>

<div class="clear"></div>
    <div>
      </br>
      <%= f.button :submit, 'Submit', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>